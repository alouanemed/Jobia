= simple_form_for(@job, html: {class: 'form-horizontal'}) do |f|
  = f.collection_select :category_id, Category.all, :id, :name, {prompt: "Choose a Category"}, input_html: { class:"dropdown-toggle"}
  = f.input :title, label: "Job title", class:'form-input'
  = f.input :description, label: "Job description"
  = f.input :company, label: "Your company"
  = f.input :url, label: "Link to apply"
  %br/
  = f.submit
